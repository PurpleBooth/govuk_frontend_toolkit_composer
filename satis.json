{
    "name":"alphagov",
    "homepage" : "https://govuk-frontend-toolkit.appspot.com",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "alphagov/govuk_frontend_toolkit",
                "version": "master",
                "type": "component",
                "source": {
                    "type": "git",
                    "reference": "master",
                    "url": "https://github.com/alphagov/govuk_frontend_toolkit.git"
                },
